#!/bin/bash
# Start Homepage service with proper configuration generation
# Template version - uses yourdomain.com placeholders

set -e

echo "Starting Homepage dashboard for Carian Observatory..."

# Generate configuration from templates
echo "Generating configuration..."
cd "$(dirname "$0")"
./generate-config.sh

# Start the service
echo "Starting Homepage service..."
cd ..
docker compose up -d

echo "Homepage dashboard started successfully!"
echo "Access at: https://homepage.yourdomain.com"