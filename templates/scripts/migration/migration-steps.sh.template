        fi
        
        # Store WebUI secret key
        local webui_secret=$(grep "^WEBUI_SECRET_KEY=" "$PROJECT_ROOT/.env" | cut -d'=' -f2)
        if [[ -n "$webui_secret" && "$webui_secret" != "your-secret-key-here" ]]; then
